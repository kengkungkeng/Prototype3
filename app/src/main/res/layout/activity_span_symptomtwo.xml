<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".span_symptomtwo">
    <TextView
            android:text="5. Bowels (การกลั้นการถ่ายอุจจาระในระยะ 1 สัปดาห์ที่ผ่านมา)"
            android:layout_width="338dp"
            android:layout_height="35dp" android:id="@+id/textView10" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.508"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.272"/>
    <TextView
            android:text="6. Bathing (การอาบน้ำ)"
            android:layout_width="337dp"
            android:layout_height="28dp" android:id="@+id/textView9" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.517"
            android:layout_marginBottom="220dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.762"/>
    <TextView
            android:text="7. Stairs (การขึ้นลงบันได 1 ชั้น)"
            android:layout_width="334dp"
            android:layout_height="31dp" android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.475" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.717"/>
    <RadioGroup
            android:layout_width="336dp"
            android:layout_height="109dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/radioGroup6"
            app:layout_constraintBottom_toTopOf="@+id/nexttwo_btn">
        <RadioButton
                android:text="0. ไม่สามารถทำได้"
                android:layout_width="174dp"
                android:layout_height="33dp" android:id="@+id/radioButton16"
        />
        <RadioButton
                android:text="1. ต้องการคนช่วย"
                android:layout_width="172dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton17"
        />
        <RadioButton
                android:text="2. ขึ้นลงได้เอง (ถ้าต้องใช้เครื่องช่วยเดิน เช่น walker จะต้องเอาขึ้นลงได้ด้วย)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton18"
        />
    </RadioGroup>
    <TextView
            android:text="4. Toilet use (ใช้ห้องน้้ำ)"
            android:layout_width="336dp"
            android:layout_height="26dp" android:id="@+id/textView8" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.011" app:layout_constraintHorizontal_bias="0.482"
            android:layout_marginTop="8dp"/>
    <RadioGroup
            android:layout_width="341dp"
            android:layout_height="131dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:id="@+id/radioGroup2"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.537"
            android:layout_marginTop="4dp">
        <RadioButton
                android:text="0. ช่วยตัวเองไม่ได้"
                android:layout_width="310dp"
                android:layout_height="32dp" android:id="@+id/radioButton8"
                android:textSize="12sp"/>
        <RadioButton
                android:layout_width="328dp"
                android:layout_height="44dp" android:id="@+id/radioButton4"
                android:textSize="12sp"
                android:text="1. ทำเองได้บ้าง (อย่างน้อยทำความสะอาดตัวเองได้หลังจากเสร็จธุระ) แต่ต้องการความช่วยเหลือในบางสิ่ง"
        />
        <RadioButton
                android:layout_width="328dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton9"
                android:textSize="12sp"
                android:text="2. ช่วยตัวเองได้ดี (ขึ้นนั่งและลงจากโถส้วมเองได้ ทำความสะอาดได้เรียบร้อยหลังจากเสร็จธุระ  ถอดใส่เสื้อผ้าได้เรียบร้อย)"
        />
    </RadioGroup>
    <RadioGroup
            android:layout_width="337dp"
            android:layout_height="75dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:id="@+id/radioGroup5" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/textView3">
        <RadioButton
                android:layout_width="242dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton11"
                android:textSize="12sp"
                android:text="0. ต้องมีคนช่วยหรือทำให้"
        />
        <RadioButton
                android:layout_width="315dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton6"
                android:textSize="12sp"
                android:text="1. อาบน้ำเองได้"
        />
    </RadioGroup>
    <RadioGroup
            android:layout_width="339dp"
            android:layout_height="116dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/radioGroup3"
            android:layout_marginVertical="8dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintHorizontal_bias="0.535">
        <RadioButton
                android:layout_width="311dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton13"
                android:textSize="12sp"
                android:text="0. กลั้นไม่ได้ หรือต้องการการสวนอุจจาระอยู่เสมอ"
        />
        <RadioButton
                android:layout_width="306dp"
                android:layout_height="42dp" android:id="@+id/radioButton12"
                android:textSize="12sp"
                android:text="1. กลั้นไม่ได้บางครั้ง (เป็นน้อยกว่า 1 ครั้งต่อสัปดาห์)"
        />
        <RadioButton
                android:layout_width="312dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton10"
                android:textSize="12sp"
                android:text="2. กลั้นได้เป็นปกติ"
        />
    </RadioGroup>
    <TextView
            android:text="ถัดไป"
            android:layout_width="83dp"
            android:layout_height="26dp"
            android:id="@+id/nexttwo_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.988" android:textAlignment="center" android:textSize="14sp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>