<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Detail_input">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:orientation="vertical"
                                                           android:id="@+id/linearLayout">
            <ImageView
                    android:layout_width="224dp"
                    android:layout_height="180dp" app:srcCompat="@drawable/female" android:id="@+id/img_p_upload2"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintVertical_bias="0.056"/>
            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_p_upload2"
                    app:layout_constraintStart_toStartOf="@+id/img_p_upload2"
                    app:layout_constraintTop_toTopOf="@+id/img_p_upload2" android:id="@+id/image_detail2"
                    android:rotation="0"
                    android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="@+id/img_p_upload2"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:text="ชื่อ"
                    android:ems="10"
                    android:id="@+id/editText" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.53"
                    app:layout_constraintTop_toBottomOf="@+id/img_p_upload2" android:layout_marginTop="8dp"
                    app:layout_constraintVertical_bias="0.047"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:text="นามสกุล"
                    android:ems="10"
                    android:id="@+id/editText4"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.53"
                    app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:text="ปี"
                    android:layout_width="40dp"
                    android:layout_height="29dp" android:id="@+id/textView8"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText4"
                    app:layout_constraintVertical_bias="0.0" android:textSize="18sp" android:textAlignment="center"
                    android:textColor="#FD070707" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/editText6"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="เพศ"
                    android:layout_width="59dp"
                    android:layout_height="29dp" android:id="@+id/textView16"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText4" app:layout_constraintHorizontal_bias="0.317"
                    app:layout_constraintVertical_bias="0.003" android:textSize="18sp" android:textAlignment="center"
                    android:textColor="#FD070707"/>
            <RadioGroup
                    android:layout_width="116dp"
                    android:layout_height="67dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintHorizontal_bias="0.46"
                    android:id="@+id/radioGroup3">
                <RadioButton
                        android:text="ชาย"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioButton7" android:layout_weight="1"/>
                <RadioButton
                        android:text="หญิง"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioButton8" android:layout_weight="1"/>
            </RadioGroup>
            <EditText
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:text="อายุ"
                    android:ems="10"
                    android:id="@+id/editText6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText4" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/editText7" app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/textView16" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.202"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:text="ที่อยู่"
                    android:ems="10"
                    android:id="@+id/editText7"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroup3"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/editText8" android:layout_marginTop="8dp"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:text="หมายเลขโทรศัพท์ผู้ดูแล"
                    android:ems="10"
                    android:id="@+id/editText8"
                    app:layout_constraintTop_toBottomOf="@+id/editText7" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/spinner"
                    android:textAlignment="center"/>
            <Spinner
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/spinner" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintTop_toBottomOf="@+id/editText8"
                    android:scrollbarSize="6dp" app:layout_constraintBottom_toTopOf="@+id/spinner2"
                    android:layout_marginBottom="2dp"/>
            <Spinner
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/spinner2"
                    android:scrollbarSize="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinner"
                    android:layout_marginTop="5dp"/>
            <TextView
                    android:text="ประเมินภาวะผู้ป่วย"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/detail_input_DB"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/spinner2" android:textSize="18sp"
                    android:layout_marginTop="5dp" android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="3dp"
                    android:textColor="#020202"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>