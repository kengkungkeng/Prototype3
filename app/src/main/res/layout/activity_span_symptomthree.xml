<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".span_symptomthree">
    <TextView
            android:text="8. Mobility (การเคลื่อนที่ภายในห้องหรือบ้าน)"
            android:layout_width="338dp"
            android:layout_height="35dp" android:id="@+id/textView10" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.011" android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.473"/>
    <TextView
            android:text="10.Bladder (การกลั้นปัสสาวะในระยะ 1 สัปดาห์ที่ผ่านมา)"
            android:layout_width="318dp"
            android:layout_height="32dp" android:id="@+id/textView9" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.376" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.644"/>
    <TextView
            android:text="9. Dressing (การสวมใส่เสื้อผ้า)"
            android:layout_width="339dp"
            android:layout_height="34dp" android:id="@+id/textView8" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.406" app:layout_constraintHorizontal_bias="0.464"/>
    <RadioGroup
            android:layout_width="334dp"
            android:layout_height="110dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView9" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:id="@+id/radioGroup2" app:layout_constraintHorizontal_bias="0.442"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp">
        <RadioButton
                android:text="0. ต้องมีคนสวมใส่ให้ ช่วยตัวเองแทบไม่ได้หรือได้น้อย"
                android:layout_width="310dp"
                android:layout_height="32dp" android:id="@+id/radioButton8"
                android:textSize="12sp"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton4"
                android:textSize="12sp"
                android:text="1. ช่วยตัวเองได้ประมาณร้อยละ 50 ที่เหลือต้องมีคนช่วย"
        />
        <RadioButton
                android:layout_width="328dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton9"
                android:textSize="12sp"
                android:text="2. ช่วยตัวเองได้ดี (รวมทั้งการติดกระดุม รูดซิบ หรือใช้เสื้อผ้าที่ดัดแปลงให้เหมาะสมก็ได้)"
        />
    </RadioGroup>
    <RadioGroup
            android:layout_width="339dp"
            android:layout_height="116dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView10" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:id="@+id/radioGroup4">
        <RadioButton
                android:layout_width="283dp"
                android:layout_height="45dp" android:id="@+id/radioButton11"
                android:textSize="12sp"
                android:text="0. กลั้นไม่ได้ หรือใส่สายสวนปัสสาวะแต่ไม่สามารถดูแลเองได้"
        />
        <RadioButton
                android:layout_width="315dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton6"
                android:textSize="12sp"
                android:text="1. กลั้นไม่ได้บางครั้ง (เป็นน้อยกว่าวันละ 1 ครั้ง)"
        />
        <RadioButton
                android:text="2. กลั้นได้เป็นปกติ"
                android:layout_width="224dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton"
        />
    </RadioGroup>
    <RadioGroup
            android:layout_width="339dp"
            android:layout_height="205dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.482"
            android:id="@+id/radioGroup3"
            android:layout_marginVertical="8dp">
        <RadioButton
                android:layout_width="311dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton13"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:text="0. เคลื่อนที่ไปไหนไม่ได้"/>
        <RadioButton
                android:layout_width="310dp"
                android:layout_height="59dp" android:id="@+id/radioButton12"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:text="1. ต้องใช้รถเข็นช่วยตัวเองให้เคลื่อนที่ได้เอง (ไม่ต้องมีคนเข็นให้) และจะต้องเข้าออกมุมห้อง  หรือประตูได้"/>
        <RadioButton
                android:layout_width="312dp"
                android:layout_height="42dp" android:id="@+id/radioButton10"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:text="2. เดินหรือเคลื่อนที่โดยมีคนช่วย เช่น พยุง หรือบอกให้ทำตาม หรือต้องให้ความสนใจดูแลเพื่อความปลอดภัย"/>
        <RadioButton
                android:layout_width="313dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton15"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:text="3. เดินหรือเคลื่อนที่ได้เอง"/>
    </RadioGroup>
    <TextView
            android:text="บันทึก"
            android:layout_width="80dp"
            android:layout_height="35dp" android:id="@+id/nextthree_btn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.469"
            app:layout_constraintVertical_bias="0.988" android:textAlignment="center" android:textSize="14sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>